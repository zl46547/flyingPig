.sign_container {
  background-color: #4dae77;
}
.sign_container .banner_wrap {
  position: relative;
}
.sign_container .banner_wrap .banner_image {
  width: 100%;
}
.sign_container .banner_wrap .sign_btn_wrap {
  position: absolute;
  width: 320rpx;
  left: 50%;
  bottom: 10%;
  transform: translateX(-50%);
}
.sign_container .banner_wrap .sign_btn_wrap .sign_btn_image {
  width: 100%;
}
.sign_container .banner_wrap .sign_btn_wrap .sign_btn_text {
  position: absolute;
  white-space: nowrap;
  left: 50%;
  top: 40%;
  transform: translate(-50%, -50%);
  color: #926623;
}
.sign_container .banner_wrap .sign_btn_wrap .sign_btn_text:active,
.sign_container .banner_wrap .sign_btn_wrap .sign_btn_text:hover {
  background-color: transparent;
}
.sign_container .banner_wrap .score_ball {
  position: absolute;
  left: 50%;
  bottom: 20%;
  transform: translate(-50%, -50%);
  width: 160rpx;
  border-radius: 50%;
  height: 160rpx;
  background: radial-gradient(transparent 65rpx, rgba(12, 184, 123, 0.8));
  text-align: center;
  color: #0c8b53;
}
.sign_container .banner_wrap .score_ball .score_ball_number {
  margin-top: 20%;
  font-size: 40rpx;
  font-weight: bold;
}
.sign_container .banner_wrap .score_ball .score_ball_label {
  font-size: 24rpx;
}
.sign_container .banner_wrap .ti_xian_wrap {
  position: absolute;
  right: 0;
  top: 20%;
  text-align: center;
  color: red;
  border-radius: 90rpx 0 0 90rpx;
  background-color: #f6d2a3;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  padding: 10rpx 15rpx;
}
.sign_container .banner_wrap .ti_xian_wrap .icon-tixian {
  line-height: 1;
  font-size: 36rpx;
  margin-right: 10rpx;
}
.sign_container .calendar_wrap {
  position: relative;
}
.sign_container .calendar_wrap .calendar_bg {
  width: 100%;
}
.sign_container .calendar_wrap .calendar_container {
  position: absolute;
  width: 100%;
  top: 60rpx;
  left: 0;
}
.sign_container .calendar_wrap .calendar_container .calendar_header {
  position: relative;
  text-align: center;
  color: #ee5c57;
  width: 100%;
}
.sign_container .calendar_wrap .calendar_container .calendar_header .month_btn {
  position: absolute;
  left: 40rpx;
  top: 0;
  height: 60rpx;
  width: 130rpx;
  text-align: center;
  line-height: 60rpx;
  background-color: #f6d2a3;
  font-size: 26rpx;
  color: #7e4410;
  border-radius: 0 90rpx 90rpx 0;
}
.sign_container .calendar_wrap .calendar_container .calendar_content {
  width: 90%;
  margin: 20rpx auto;
  font-size: 24rpx;
  color: #2d2d2d;
  overflow: hidden;
}
.sign_container .calendar_wrap .calendar_container .calendar_content .week_day_content {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  grid-row-gap: 20rpx;
}
.sign_container .calendar_wrap .calendar_container .calendar_content .week_day_content .day_item {
  margin: auto;
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  position: relative;
}
.sign_container .calendar_wrap .calendar_container .calendar_content .week_day_content .not_current_month {
  color: #ccc;
}
.sign_container .calendar_wrap .calendar_container .calendar_content .week_day_content .is_now_date {
  background: #f82;
  border-radius: 50%;
  color: #fff;
}
.sign_container .calendar_wrap .calendar_container .calendar_content .week_day_content .signed:before {
  content: "";
  position: absolute;
  bottom: -16rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 14rpx;
  height: 14rpx;
  background: #f23a3d;
  border-radius: 50%;
}
.sign_container .calendar_wrap .calendar_container .calendar_content .week_day_content .repair_signed:after {
  content: "è¡¥";
  position: absolute;
  bottom: -14rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 26rpx;
  height: 26rpx;
  line-height: 26rpx;
  text-align: center;
  background: #5cf23a;
  border-radius: 50%;
  color: #fff;
  font-size: 18rpx;
}
.sign_container .recommend_wrap .split_line {
  width: 100%;
}
.sign_container .sign_in_success {
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
}
.sign_container .sign_in_success .banner_image_container {
  width: 80%;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.sign_container .sign_in_success .banner_image_container .banner_image {
  width: 100%;
}
.sign_container .sign_in_success .banner_image_container .get_count_wrap {
  position: absolute;
  top: 10%;
  width: 100%;
  text-align: center;
  font-size: 30rpx;
  color: red;
}
.sign_container .sign_in_success .banner_image_container .get_count_wrap .count_add {
  padding: 0 10rpx;
  font-size: 80rpx;
}
.sign_container .sign_in_success .banner_image_container .remind_text {
  width: 100%;
  text-align: center;
  position: absolute;
  top: 48%;
  font-size: 32rpx;
  color: #ffd59c;
}
.sign_container .sign_in_success .banner_image_container .tomorrow_point {
  top: 40%;
}
.sign_container .sign_in_success .banner_image_container .tomorrow_point text {
  font-weight: bold;
  font-size: 40rpx;
}
.sign_container .sign_in_success .banner_image_container .remind_btn {
  position: absolute;
  top: 65%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 70%;
  border-radius: 90rpx;
  background-color: #fece48;
  text-align: center;
  padding: 24rpx;
  font-size: 36rpx;
  color: #a40023;
}
.sign_container .sign_in_success .banner_image_container .banner_close {
  text-align: center;
  color: #fff;
}
.sign_container .sign_in_success .banner_image_container .banner_close .icon {
  font-size: 54rpx;
}
